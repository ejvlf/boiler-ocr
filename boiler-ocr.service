[Unit]
Description=Ferlux Boiler OCR Service
After=network.target mariadb.service

[Service]
User={user}
Group={group}

WorkingDirectory=

ExecStart={path}python main.py --settings my_settings --file_log

# Restart configuration
Restart=always
RestartSec=300

# PYTHONUNBUFFERED=1 ensures logs are sent to systemd immediately
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=multi-user.target